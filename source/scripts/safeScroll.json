{
  "name": "safeScroll DX",
  "type": "toggle",
  "extend": true,
  "description": "allows blurring or hiding of media and text from certain blogs or posts with certain tags",
  "category": "posts",
  "preferences": {
    "blogAvatars": {
      "title": "blur or hide avatars in filtered posts",
      "type": "select",
      "dummy": "disable",
      "options": {
        "all": { "title": "blur or hide all avatars" },
        "filtered": { "title": "blur or hide filtered blog avatars only" },
        "disable": { "title": "don't blur or hide avatars" }
      }
    },
    "media": {
      "title": "blur or hide media in filtered posts",
      "type": "toggle"
    },
    "text" : {
      "title": "blur or hide text in filtered posts",
      "type": "toggle"
    },
    "inheritCommunityLabels": {
      "title": "filter posts with community labels",
      "type": "toggle"
    },
    "filterBlogs": {
      "title": "blog list filter style",
      "type": "multiSelect",
      "options": {
        "parent": { "title": "filter posts from listed blogs" },
        "rebloggedFrom": { "title": "filter posts reblogged from listed blogs" },
        "root": { "title": "filter posts where the original poster is a listed blog" },
        "trail": { "title": "filter posts containing listed blogs in the reblog trail" }
      }
    },
    "blogList": {
      "title": "filtered blogs",
      "type": "text",
      "placeholder": "enter a list of blogs (comma-separated)"
    },
    "tagList": {
      "title": "filtered tags",
      "type": "text",
      "placeholder": "enter a list of tags (comma-separated)"
    },
    "hideStyle": {
      "title": "content filtering style",
      "type": "select",
      "options": {
        "blur": { "title": "blur" },
        "cover": { "title": "cover" },
        "collapse": { "title": "collapse" },
        "hidePost": { "title": "hide entire post" }
      }
    },
    "dispelStyle": {
      "title": "show filtered content style",
      "type": "select",
      "options": {
        "hover": { "title": "hover to show content" },
        "click": { "title": "hover to show content, click to remove filter" }
      }
    }
  },
  "js": true,
  "css": true
}