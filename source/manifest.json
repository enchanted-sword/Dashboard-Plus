{
  "manifest_version": 3,
  "name": "Dashboard Plus",
  "short_name": "DB+",
  "version": "1.9.0",
  "description": "Take control of your Tumblr dashboard!",
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "developer": {
    "name": "The Starlight System",
    "url": "https://github.com/enchanted-sword/Dashboard-Plus"
  },
  "permissions": [
    "storage",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "*://*.tumblr.com/"
  ],
  "incognito": "spanning",
  "web_accessible_resources": [
    {
      "resources": [
        "*.js",
        "*.json",
        "*.css",
        "*.svg"
      ],
      "matches": [
        "*://*.tumblr.com/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.tumblr.com/*"
      ],
      "exclude_matches": [
        "*://*.tumblr.com/login",
        "*://*.tumblr.com/register",
        "*://*.tumblr.com/register?*",
        "*://*.tumblr.com/privacy/*"
      ],
      "run_at": "document_start",
      "js": [
        "control/contentScript.js",
        "libraries/jquery.min.js"
      ],
      "css": [
        "scripts/utility/dashboardElements.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "control/background.js"
    ]
  },
  "action": {
    "default_icon": {
      "48": "icons/icon.svg",
      "96": "icons/icon.svg"
    },
    "default_popup": "meta/menu.html?popup=true",
    "default_area": "navbar"
  },
  "options_ui": {
    "page": "meta/menu.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "dashboardplus@starlight-symposium.neocities.org",
      "strict_min_version": "121.0"
    },
    "gecko_android": {}
  }
}