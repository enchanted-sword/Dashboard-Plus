{
  "manifest_version": 3,
  "name": "Dashboard Plus",
  "version": "1.0",

  "description": "Take control of your Tumblr dashboard!",
  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png"
  },
  "author": "April Lunarii",
  "homepage_url": "https://github.com/enchanted-sword/Dashboard-Plus",

  "permissions": [ "storage", "declarativeNetRequestWithHostAccess" ],
  "host_permissions": ["*://*.tumblr.com/"],
  "web_accessible_resources": [{
    "resources": [ "*.js", "*.json", "*.css", "*.svg" ],
    "matches": ["*://www.tumblr.com/*"]
  }],

  "content_scripts": [
    {
      "matches": [
        "*://www.tumblr.com/*"
      ],
      "exclude_matches": [
        "*://www.tumblr.com/login",
        "*://www.tumblr.com/register",
        "*://www.tumblr.com/register?*",
        "*://www.tumblr.com/privacy/*"
      ],
      "run_at": "document_start",
      "js": [
        "control/contentScript.js",
        "libraries/jquery.min.js"
      ],
      "css": [
        "scripts/utility/dashboardElements.css"
      ]
    }
  ],
  "background": {
    "scripts": ["control/background.js"]
  },

  "action": {
    "default_icon" : {
      "48": "icons/48.png",
      "96": "icons/96.png"
    },
    "default_popup": "meta/menu.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "dashboardplus@girldragon.neocities.org",
      "strict_min_version": "122.0"
    }
  }
}
